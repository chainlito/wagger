{
  "name": "wagerr-electron-app",
  "version": "2.0.0-alpha.0",
  "description": "Wagerr Electron App is a cross-platform GUI for Wagerr enabling betting on the blockchain.",
  "author": {
    "name": "Wagerr Limited"
  },
  "license": "MIT",
  "homepage": "https://www.wagerr.com/",
  "private": true,
  "main": "./dist/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --cache --format=pretty .",
    "lint-fix": "npm run --silent lint -- --fix; exit 0",
    "lint-styles": "stylelint --ignore-path .eslintignore '**/*.*(css|scss)' --syntax scss",
    "lint-styles-fix": "npm run --silent lint-styles -- --fix; exit 0",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "package": "npm run build && electron-builder build --publish never",
    "postlint-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{js,vue,json,html,css,less,scss,yml}'",
    "postlint-styles-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{css,scss}'"
  },
  "build": {
    "afterSign": "build/mac/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "wagerr",
      "repo": "wagerr-electron-app",
      "private": false
    },
    "productName": "WagerrElectronApp",
    "appId": "com.wagerr.electron.app",
    "files": [
      "dist",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "artifactName": "${name}-${version}-${os}.${ext}",
      "entitlements": "build/mac/entitlements.plist",
      "entitlementsInherit": "build/mac/entitlements.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true
    },
    "dmg": {
      "title": "Wagerr Electron App ${version}",
      "contents": [
        {
          "x": 90,
          "y": 180
        },
        {
          "x": 390,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "category": "Finance",
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "armv7l",
            "arm64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "axios": "^0.19.2",
    "core-js": "^3.6.5",
    "decompress": "^4.2.1",
    "electron-progressbar": "Cryptarchist/electron-progressbar#1f49bcb",
    "electron-store": "^5.2.0",
    "electron-updater": "^4.3.1",
    "element-ui": "^2.13.2",
    "find-process": "^1.4.3",
    "fs-extra": "^9.0.1",
    "jszip": "^3.5.0",
    "materialize-css": "^1.0.0",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "properties-reader": "2.0.0",
    "qrcode": "^1.4.4",
    "typeface-montserrat": "0.0.75",
    "typeface-open-sans": "0.0.75",
    "vee-validate": "^2.2.15",
    "vue": "^2.6.11",
    "vue-clipboards": "^1.3.0",
    "vue-moment": "^4.1.0",
    "vue-router": "^3.3.4",
    "vue2-perfect-scrollbar": "^1.5.0",
    "vuex": "^3.5.1",
    "vuex-electron": "^1.0.3",
    "wagerrd-rpc": "^0.1.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.3",
    "@babel/plugin-proposal-do-expressions": "^7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
    "@babel/plugin-proposal-function-bind": "^7.10.1",
    "@babel/plugin-proposal-function-sent": "^7.10.1",
    "@babel/plugin-proposal-json-strings": "^7.10.1",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.10.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-numeric-separator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.1",
    "@babel/plugin-proposal-throw-expressions": "^7.10.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.3",
    "ajv": "^6.12.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cfonts": "^2.8.5",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "del": "^5.1.0",
    "devtron": "^1.4.0",
    "dotenv": "^8.2.0",
    "electron": "^6.1.12",
    "electron-builder": "^22.7.0",
    "electron-debug": "^3.1.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^6.2.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "listr": "^0.14.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-loader": "^1.0.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^3.0.6",
    "url-loader": "^4.1.0",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  }
}
